{
  "name": "pdf-electron-app",
  "productName": "PDFmanager",
  "version": "1.3.4",
  "description": "Application for working with PDF files",
  "main": "./dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "build:tailwind": "npx tailwindcss -i ./src/input.css -o ./src/styles.css",
    "package": "npm run build && npm run build:tailwind",
    "make": "npm run package && npx electron-builder --win --x64",
    "publish": "npm run package && npx electron-builder --win --x64 --publish=always",
    "copy-assets": "node copy-assets.js",
    "watch-assets": "nodemon --watch src/index.html --watch src/styles.css --exec \"npm run copy-assets\""
  },
  "keywords": [],
  "author": "azoga99",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.2",
    "autoprefixer": "^10.4.19",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.39",
    "shelljs": "^0.10.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.2.0",
    "pdf-lib": "^1.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AZOGAdev/pdf-electron-app.git"
  },
  "build": {
    "appId": "com.azogadev.pdfmanager",
    "productName": "PDFmanager",
    "directories": {
      "output": "dist-electron-builder"
    },
    "files": [
      "dist/**/*",
      "src/assets/**/*",
      "src/styles.css",
      "src/index.html",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "AZOGAdev",
      "repo": "pdf-electron-app"
    }
  }
}
