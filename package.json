{
  "name": "pdf-electron-app",
  "productName": "PDFmanager",
  "version": "1.0.0",
  "description": "Application for working with PDF files",
  "main": "./dist/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "tsc",
    "build:tailwind": "npx tailwindcss -i ./src/input.css -o ./src/styles.css",
    "watch:tailwind": "npx tailwindcss -i ./src/input.css -o ./src/styles.css --watch",
    "package": "npm run build && npm run build:tailwind && electron-forge package",
    "make": "npm run build && npm run build:tailwind && electron-forge make",
    "publish": "npm run build && npm run build:tailwind && electron-forge publish"
  },
  "keywords": [],
  "author": "azoga99",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/publisher-github": "^7.10.2",
    "@types/node": "^20.14.2",
    "autoprefixer": "^10.4.19",
    "electron": "^31.3.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.2.0",
    "pdf-lib": "^1.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AZOGAdev/pdf-electron-app.git"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "icon": "assets/icon.ico",
        "extraResource": ["app-update.yml"]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "PDFmanager",
            "setupIcon": "assets/icon.ico",
            "loadingGif": "assets/install-spinner.gif"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "AZOGAdev",
              "name": "pdf-electron-app"
            },
            "draft": false
          }
        }
      ]
    }
  }
}
